# Django core settings
DJANGO_SECRET_KEY=replace-with-a-strong-secret-key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourusername.pythonanywhere.com

# Database (SQLite for free tier on PythonAnywhere)
DATABASE_URL=sqlite:///db.sqlite3
# Example Postgres (paid plan or external DB):
# DATABASE_URL=postgres://taskuser:securepassword@localhost:5432/taskdb

# Email configuration (optional, for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=replace-with-email-password
EMAIL_USE_TLS=True

# Timezone and localization
DJANGO_TIME_ZONE=Africa/Accra
DJANGO_USE_TZ=True

# CORS (if you have a frontend app)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.example.com
